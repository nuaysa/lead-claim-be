generator client {
  provider   = "prisma-client-js"
  output     = "../prisma/generated/client"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           Int    @id @default(autoincrement())
  name         String
  email        String @unique
  password     String
  role         Role
  leads        Lead[]
  tokenVersion Int    @default(0)
}

model Lead {
  id     Int        @id @default(autoincrement())
  name   String
  phone  String
  source String?
  status LeadStatus @default(UNCLAIMED)

  claimedById Int?
  claimedBy   User? @relation(fields: [claimedById], references: [id])

  claimedAt   DateTime?
  requestDate DateTime  @default(now())
}

enum Role {
  SALES
  ADMIN
}

enum LeadStatus {
  UNCLAIMED
  CLAIMED
}
